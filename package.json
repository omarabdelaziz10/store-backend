{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "lint": "eslint --fix . --ext .ts",
    "prettier": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "create-dev-db": "db-migrate --config database_create.json db:create store && npm run dbdev-up",
    "create-test-db": "db-migrate --config database_create.json db:create store_test",
    "jasmine": "jasmine",
    "start": "nodemon ./src/server.ts",
    "build": "rm -rf dist && npx tsc",
    "start:prod": "npm run build && node dist/server.js",
    "test": "npm run dbtest-reset && set ENV=test&& npm run dbtest-up && npm run build && npm run jasmine && npm run dbtest-reset",
    "dbdev-up": "db-migrate up --config ./database.json --e dev",
    "dbdev-reset": "db-migrate reset --config ./database.json --e dev",
    "dbtest-up": "db-migrate up --config ./database.json --e test",
    "dbtest-reset": "db-migrate reset --config ./database.json --e test"
  },
  "author": "Omar Abdelaziz",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jasmine": "^4.3.1",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.11",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.5.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.5.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.9.4"
  }
}
